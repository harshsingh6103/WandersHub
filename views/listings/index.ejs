<% layout("/layouts/boilerplate")%>

  <body>
    <h3>All Listings</h3>
    <!-- <form method="GET" action="/listings/new">
      <button>Create New Listing</button>
    </form> -->
    <div class="row row-cols-lg-3 row-cols-md-3">

      <% for(let listing of allListings) { %>

        <div class="card col ">
          <a href=/listings/<%=listing._id%> class="overlay">
            <img src='<%=listing.image.url%>' class="card-img-top" alt="listingimage" class="overlay"
              style="height: 18rem">
          </a>

          <div class="card-body">
            <p class="card-text">
              <b>
                <%= listing.title %>
              </b>
              <br>
              &#8377; <%= listing.price.toLocaleString("en-IN") %>/night

            </p>
            <a href=/listings/<%=listing._id%> class="btn btn-primary">Explore Property</a>
          </div>
        </div>
        <% } %>

    </div>


